{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "moduleResolution": "Node",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "types": [
            "node"
        ],
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}